/*
	Iterates over all possible vectors of the form ( x1, x2, x3, ..., xn ),
	where the xi are integers from 0 to end-1.
*/

		outer: while( true )
		{
			// some stuff here
			int ptr = 0;
			while( val[ptr] == end-1 )
			{
				val[ptr] = 0;
				ptr++;
				if( ptr == n ) break outer;
			}
			val[ptr]++;
		}
